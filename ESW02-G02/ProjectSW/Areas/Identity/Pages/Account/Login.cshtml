@page
@model LoginModel

@{
    ViewData["Title"] = "Autenticar";
}

<script>$(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    $(function () {
        $('[data-toggle="popover"]').popover({
            container: 'body'
        })
    })

    $('.popover-dismiss').popover({
        trigger: 'focus'
})</script>

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <button style="width:3em; float:right;" type="button" class="btn btn-outline-info form-control" data-toggle="popover" data-trigger="focus" title="Email" data-content="Aqui irá inserir o seu email.">
                        <img style="width:100%" src="~/images/info_popup.png" alt="info">
                    </button>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <button style="width:3em; float:right;" type="button" class="btn btn-outline-info form-control" data-toggle="popover" data-trigger="focus" title="Password" data-content="Aqui irá inserir a respetiva password.">
                        <img style="width:100%" src="~/images/info_popup.png" alt="info">
                    </button>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Autenticar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Esqueci-me da password?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
  

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
