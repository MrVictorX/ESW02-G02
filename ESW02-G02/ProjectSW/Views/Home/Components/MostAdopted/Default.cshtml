@model IEnumerable<ProjectSW.Models.Animal>
@{
    Layout = null;
}

<div class="col-md-5" style="background-color:white; width:49%; height:50%; margin-left:15%; position:absolute;">
    <canvas id="myChart"></canvas>
</div>



<script type="text/javascript">
    function GetAnimalData() {
        var animals = @Html.Raw(Json.Serialize(Model));
        var ageData = [0, 0, 0, 0, 0];
        for (i = 0; i < animals.length; i++) {
            var age = @DateTime.Now.Year - parseInt(animals[i].dateOfBirth.substring(0, 4), 10);
            switch (age) {
                case 0:
                case 1:
                case 2:
                    ageData[0]++;
                    break;
                case 3:
                case 4:
                case 5:
                    ageData[1]++;
                    break;
                case 6:
                case 7:
                case 8:
                    ageData[2]++;
                    break;
                case 9:
                case 10:
                    ageData[3]++;
                    break;
                default:
                    ageData[4]++;
                    break;
            }
        }
        return ageData;
    }

    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["0-2", "3-5", "6-8", "9-10", "10>"],
            datasets: [{
                label: 'idade dos animais adotados',
                data: GetAnimalData(),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

</script>

