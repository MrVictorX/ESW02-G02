@model ProjectSW.Models.Animal


@{
    ViewData["Title"] = "Details";

    string imgBase64 = null;
    string imgSrc = null;
    //string fileSrc = null;
    if (Model.Foto != null)
    {
        imgBase64 = Convert.ToBase64String(Model.Foto);
        imgSrc = String.Format("data:image/gif;base64,{0}", imgBase64);
    }
    //if (Model.Attachments != null)
    //{
    //    fileSrc = String.Format("data:application/pdf;base64,{0}", Convert.ToBase64String(Model.Attachments));
    //}
}

<div class="div-content-form">
    <h2 style="font-size: 30px; margin-left:32%;"> <img src="~/images/pawprint-white.png" style="margin-right: 10%;margin-bottom: 2%;" /><b>Eliminar</b></h2>

    <div style="margin-left: 22%; margin-top: 5%; margin-bottom: 5%;">
        <h3>Tem a certeza que pretende eliminar esta ficha de Animal?</h3>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Size)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Size)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Breed)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Breed.Id)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.EntryDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EntryDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Foto)
            </dt>
            <dd>
                <img src="@imgSrc" height="200px" width="200px" alt="Sem foto disponivel" />
            </dd>
        </dl>
        <form asp-action="Delete" style="margin-left:1%;">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="delete-btn" />
            <div class="return-link"><a asp-action="Index" style="color:#164C48; text-decoration:none;">Voltar</a></div>
        </form>
    </div>

</div>