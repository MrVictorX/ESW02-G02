@model ProjectSW.Models.ExitForm


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";

    string base64 = null;
    string imgSrc = null;
    if (Model.Animal.Foto != null)
    {
        base64 = Convert.ToBase64String(Model.Animal.Foto);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="div-content-form">
    <h2 style="font-size: 30px; margin-left:32%;"> <img src="~/images/pawprint-white.png" style="margin-right: 10%;margin-bottom: 2%;" /><b>Editar</b></h2>
    <div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" style="margin-left: 100%; margin-top: 10%; width:130%">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="AnimalId" class="control-label"></label>
                        <img src="@imgSrc" height="100px" width="100px" alt="Sem foto disponivel" />
                        <input asp-for="AnimalId" value="@Model.AnimalId" type="hidden" class="form-control" />
                        <span asp-validation-for="AnimalId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdopterName" class="control-label"></label>
                        <input asp-for="AdopterName" class="form-control" />
                        <span asp-validation-for="AdopterName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdopterCitizenCard" class="control-label"></label>
                        <input asp-for="AdopterCitizenCard" class="form-control" />
                        <span asp-validation-for="AdopterCitizenCard" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdopterAddress" class="control-label"></label>
                        <input asp-for="AdopterAddress" class="form-control" />
                        <span asp-validation-for="AdopterAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdopterPostalCode" class="control-label"></label>
                        <input asp-for="AdopterPostalCode" class="form-control" />
                        <span asp-validation-for="AdopterPostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdopterEmail" class="control-label"></label>
                        <input asp-for="AdopterEmail" class="form-control" />
                        <span asp-validation-for="AdopterEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Motive" class="control-label"></label>
                        <input asp-for="Motive" class="form-control" />
                        <span asp-validation-for="Motive" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="State" class="control-label"></label>
                        <select asp-for="State" class="form-control custom-select" id="Registar-user-type">
                            <option value="Denied">Recusar</option>
                            <option value="Evaluating">Pendente</option>
                            <option value="Granted">Aceitar</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="button-format" style="margin-left:-1%;" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index"><button class="button-format" style="margin-left: 37%;"><span>Voltar</span></button></a>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
