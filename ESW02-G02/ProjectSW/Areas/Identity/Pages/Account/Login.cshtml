@page
@model LoginModel

@{
    ViewData["Title"] = "Autenticar";
}

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    $(function () {
        $('[data-toggle="popover"]').popover({
            container: 'body'
        })
    })

    $('.popover-dismiss').popover({
        trigger: 'focus'
    })</script>

<div class="div-content" >
    
    <div class="row">
        <div class="col-md-4">
            <section>
                <form class="form-login" method="post">
                    <h2 style="font-size: 30px;">@ViewData["Title"]</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <button style="background-color:#164C48; width:3em; float:right;" type="button" class="btn btn-outline-info form-control" data-toggle="popover" data-trigger="focus" title="Email" data-content="Aqui irá inserir o seu email.">
                            <img style="width:100%" src="~/images/info_popup.png" alt="info">
                        </button>
                        <input asp-for="Input.Email" class="form-control" id="Login-Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <button style="background-color:#164C48;width:3em; float:right;" type="button" class="btn btn-outline-info form-control" data-toggle="popover" data-trigger="focus" title="Password" data-content="Aqui irá inserir a respetiva password.">
                            <img style="width:100%" src="~/images/info_popup.png" alt="info">
                        </button>
                        <input asp-for="Input.Password" class="form-control" id="Login-Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default" id="Login-Submit" style="margin-left:0%;">Autenticar</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword" style="color:white">Esqueci-me da password?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>


    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
