@using Microsoft.AspNetCore.Identity
@using ProjectSW.Areas.Identity.Data
@inject SignInManager<ProjectSWUser> SignInManager
@inject UserManager<ProjectSWUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<div class="profile-logout-btns">
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" style="border:none">
        @*<a asp-area="" asp-controller="Account" asp-action="ViewProfile">ver perfil</a>*@
        @*<a asp-area="" asp-controller="Account" asp-action="EditProfile">editar</a>*@
        <img src="~/images/notification.png" alt="Logo" height="24" width="24" style="transform:translateX(200%)"/>
        <img src="~/images/fotoPerfil.png" alt="Logo" height="24" width="24" style="transform:translateX(350%)"/>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
        <button type="submit" class="btn btn-link navbar-btn navbar-link">Sair</button>
    </form>
</div>
}
else
{
    <div class="register-login-btns">
        <a asp-area="Identity" asp-page="/Account/Login">Autenticar</a>
        <a asp-area="Identity" asp-page="/Account/Register">Registar</a>
    </div>
}
