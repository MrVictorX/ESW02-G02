@model IEnumerable<ProjectSW.Models.Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<div class="div-content">
    <h2 style="font-size: 30px;"><b>Lista de Tarefas</b></h2>
    <p>
        <a asp-action="Create" class="title-link" style="font-size: 20px;"><button class="button-format"><span>Criar nova Tarefa </span></button></a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.Account.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.Account.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.Account.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="edit-link">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="details-link">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete-link">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
