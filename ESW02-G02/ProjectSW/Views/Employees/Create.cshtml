@model ProjectSW.Models.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    $(function () {
        $('[data-toggle="popover"]').popover({
            container: 'body'
        })
    })

    $('.popover-dismiss').popover({
        trigger: 'focus'
    })
</script>

<div class="div-content">
    <h2 style="font-size: 30px;"><b>Criar Ficha de Funcionário</b></h2>
    <hr />
    <div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AccountId" class="control-label"></label>
                        <button style="width:3em; float:right;" type="button" class="btn btn-outline-info form-control" data-toggle="popover" data-trigger="focus" title="Email" data-content="Aqui irá inserir o email do funcionário.">
                            <img style="width:100%" src="~/images/info_popup.png" alt="info">
                        </button>
                        <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <button style="width:3em; float:right;" type="button" class="btn btn-outline-info form-control" data-toggle="popover" data-trigger="focus" title="Cargo" data-content="Aqui irá inserir o cargo do funcionário.">
                            <img style="width:100%" src="~/images/info_popup.png" alt="info">
                        </button>                    
                        <select asp-for="Type" class="form-control">
                            <option selected>Tipo de Cargo</option>
                            <option value="Voluntário">Voluntário</option>
                            <option value="Funcionário">Funcionário</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="AditionalInformation" class="control-label"></label>
                        <button style="width:3em; float:right;" type="button" class="btn btn-outline-info form-control" data-toggle="popover" data-trigger="focus" title="Aditional Information" data-content="Aqui irá inserir alguma informação adicional que seja relevante.">
                            <img style="width:100%" src="~/images/info_popup.png" alt="info">
                        </button>
                        <input asp-for="AditionalInformation" class="form-control" />
                        <span asp-validation-for="AditionalInformation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="button-format" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index" class="return-link"><button class="button-format">Voltar</button></a>
        </div>
    </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
