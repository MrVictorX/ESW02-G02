@model ProjectSW.Models.ExitForm


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";

    string base64 = null;
    string imgSrc = null;
    if (Model.Animal.Foto != null)
    {
        base64 = Convert.ToBase64String(Model.Animal.Foto);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="div-content-form">
    <h2 style="font-size: 30px; margin-left:32%">
        <img src="~/images/pawprint-white.png" style="margin-right: 10%;margin-bottom: 2%;" /><b>Detalhes</b>
    </h2>
    <div style="margin-left: 25%; margin-top: 5%; margin-bottom: 5%;">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Animal)
            </dt>
            <dd>
                <img src="@imgSrc" height="100px" width="100px" alt="Sem foto disponivel" />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AdopterName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AdopterName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AdopterCitizenCard)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AdopterCitizenCard)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AdopterAddress)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AdopterAddress)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AdopterPostalCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AdopterPostalCode)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AdopterEmail)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AdopterEmail)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Motive)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Motive)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>
        </dl>
    </div>
    <div style="margin-left:25%">
        <div class="return-link">
            <a asp-area="" asp-controller="AnimalMonitoringReport" asp-action="Index" asp-route-exitFormId="@Model.Id" class="edit-link">Relatórios</a>
            </div>
            <div class="return-link">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="edit-link">Editar</a>
            </div>
            <div class="return-link" style="display:inline;"><a asp-action="Index" lass="edit-link" style="color:#164C48; text-decoration:none;">Voltar</a></div>
        </div>
    </div>

