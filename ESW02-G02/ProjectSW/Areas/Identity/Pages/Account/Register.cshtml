@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h2 style="margin-left:36%">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4" style="left:25%;">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name">Nome Completo*</label> 
                <div class="popup" onclick="myFunction()">
                    <img src="~/images/info_popup.png" style="height:1em; width:1em;" />
                    <span class="popuptext" id="myPopup">Popup text...</span>
                </div>
                <input asp-for="Input.Name" class="form-control" />          
            </div>
            <div class="form-group">
                <label asp-for="Input.Address">Morada*</label>
                <input asp-for="Input.Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfBirth">Data de Nascimento*</label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.UserType">Tipo de Utilizador*</label>
                <select asp-for="Input.UserType" class="form-control custom-select">
                      <option selected>Tipo de utilizador</option>
                      <option value="Funcionario">Funcionario</option>
                      <option value="Voluntario">Voluntario</option>
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">Email*</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Password*</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar Password*</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            Campos com * são obrigatórios<br /><br />
            <button type="submit" class="btn btn-default" style="margin-left: 32%">Registar</button>
        </form>
    </div>
</div>
<img src="~/images/Image_1.png" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
