@model ProjectSW.Models.Animal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    $(function () {
        $('[data-toggle="popover"]').popover({
            container: 'body'
        })
    })

    $('.popover-dismiss').popover({
        trigger: 'focus'
    })
</script>


<div class="div-content">
    <h2 style="font-size: 30px;"><b>Criar Ficha de Animal</b></h2>
    <hr />
    <div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Size" class="control-label"></label>
                        <select asp-for="Size" class="form-control">
                            <option selected>Indefinido</option>
                            <option value="Mini">Mini (menos de 5Kg)</option>
                            <option value="Pequeno">Pequeno (5-10Kg)</option>
                            <option value="Pequeno/Médio">Pequeno/Médio (11-15Kg)</option>
                            <option value="Médio">Médio (16-20Kg)</option>
                            <option value="Médio/Grande">Médio/Grande (21-22Kg)</option>
                            <option value="Grande">Grande (26-45Kg)</option>
                            <option value="Muito Grande">Muito Grande (mais de 45Kg)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control">
                            <option selected>Indefinido</option>
                            <option value="Macho">Macho</option>
                            <option value="Fêmea">Fêmea</option>
                        </select>

                    </div>
                    <div class="form-group">
                        <label asp-for="BreedId" class="control-label"></label>
                        <select asp-for="BreedId" class="form-control" asp-items="ViewBag.BreedId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="EntryDate" class="control-label"></label>
                        <input asp-for="EntryDate" class="form-control" />
                        <span asp-validation-for="EntryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Foto" class="control-label"></label>
                        <input asp-for="Foto" class="form-control" type="file" name="foto" id="foto" onchange="loadFile(event)" />
                        <span asp-validation-for="Foto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="button-format" />

                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="return-link"><button class="button-format">Voltar</button></a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
